/* pages/personal/order/order.wxss */
.clearfix{zoom:1;}
.clearfix:after{display:block; overflow:hidden; clear:both; height:0; visibility:hidden; content:".";}
page{
    background-color: #efefef;
}
.nav{
    background-color: #fff;
}
.nav view{
    float: left;
    padding: 20rpx 0;
    width: 33.33%;
    border-bottom: 3rpx solid transparent;
    font-size: 30rpx;
    color: #333;
    text-align: center;
}
.nav .nav-color{
    border-bottom-color: orange;
    color: orange;
}
.order{
    border-bottom: 1rpx solid #e5e5e5;
}
.order-num-time{
    padding: 10rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 25rpx;
}
.order-num{
    float: left;
    padding: 5rpx 40rpx;
    background-color: orange;
    color: #000;
}
.order-time{
    float: right;
    margin-right: 10rpx;
    margin-top: 5rpx;
    color: #333;
}
.order-details{
    margin-left: 20rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
}
.order-details .order-image{
    float: left;
    margin-right: 20rpx;
    border: 1rpx solid #999;
    width: 150rpx;
    height: 150rpx;
}
.order-details .order-image image{
    width: 100%;
    height: 100%;
}
.order-details-box{
    float: left;
    width: 550rpx;
    font-size: 25rpx;
}
.order-name{
    color: #333;
    height: 115rpx;
}
.order-amount-value{
    color: #666;
}
.order-amount{
    margin-right: 5rpx;
}
.order-value{
    color: orange;
}
.total-Price{
    margin-left: 20rpx;
    padding: 10rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    color: #666;
    font-size: 25rpx;
}
.total-Price view{
    float: right;
    margin-right: 10rpx;
}
.total-price{
    color: orange;
}
.order-tap{
    padding: 20rpx 0;
    color: #fff;
}
.order-tap view{
    float: right;
}
.order-tap view text{
    margin-right: 20rpx;
    padding: 10rpx 20rpx;
    background-color: orange;
    border-radius: 7rpx;
    font-size: 25rpx;   
}
.no-more{
    margin-top: 10rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center;
}