.goodsDetail{
    width:100%;
}
.goodsName,.goodsPrice{
  display: block;
  font-size:28rpx;
  padding:0 10rpx;
}
.goodsPrice{
  color:orange;
  padding:10rpx 10rpx;
}
.goodsIntro{
    color:#333;
    font-size:24rpx;
    padding:0 10rpx;
}
.detailBox{
  position:relative;
}
.heartIcon{
    position: absolute;
    bottom:20rpx;
    right:20rpx;
    width:50rpx;
    height:50rpx;
}
.cartIcon{
    position: absolute;
    top:20rpx;
    right:20rpx;
    width:50rpx;
    height:50rpx; 
}
.homeIcon{
    position: absolute;
    top:20rpx;
    left:20rpx;
    width:50rpx;
    height:50rpx; 
}
contact-button{
    position: absolute;
    bottom:20rpx;
    left:20rpx;
}
.bottomNav{
    position:fixed;
    bottom:0;
    width:100%;
    height:80rpx;
}
.bottomNav view{
    display: inline-block;
    width:25%;
    height:80rpx;
    line-height:80rpx;
    text-align:center;
    font-size:28rpx;
}
.bottomNav view:nth-of-type(1){
    background-color:rgba(0,0,0,0.1);
}
.bottomNav view:nth-of-type(2){
    background-color:rgba(0,0,0,0.2);
}
.bottomNav view:nth-of-type(3){
    background-color:orange;
    color:white;
}
.bottomNav view:nth-of-type(4){
    background-color:black;
    color:white;
}
.buyMeng{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:rgba(0, 0, 0, 0.5);
    z-index:2;
}
.chooseBox{
    width:80%;
    margin-left:10%;
    margin-top:30%;
    background-color:white;
}
.chooseBox image{
    width:80rpx;
    height:80rpx;
    vertical-align: top;
}
.chooseBox .infor{
    padding:30rpx;
}
.chooseBox .infor .inforChild{
    padding-bottom:20rpx;
    border-bottom:1px solid rgba(0,0,0,0.2);
}
.chooseBox .infor .inforChildSec{
    height:80rpx;
    line-height:80rpx;
    font-size:32rpx;
    border-bottom:1px solid rgba(0,0,0,0.2);
}
.chooseBox .infor .intro{
    display: inline-block;
    padding-left:20rpx;
}
.chooseBox .infor .intro text{
    display: block;
    font-size:30rpx;
    line-height:40rpx;
    margin-bottom:10rpx;
}
.chooseBox .infor .intro text:nth-of-type(2){
    color:orange;
}
.chooseBox button{
    color:green;
}
.inforChildThird{
    padding:20rpx 0;
}
.inforChildThird image{
    width:30rpx;
    height:30rpx;
    padding:30rpx;
    vertical-align: middle;
}
.inforChildThird text{
    vertical-align: middle;
    font-size:32rpx;
}
.inforChildThird image:nth-of-type(1){
    margin-left:170rpx;
}
.inforChildThird .count{
    padding:0 5rpx;
    display: inline-block;
    color:black;
    width:40rpx;
    text-align:center;
}
.inforChildFor .total{
    color:orange;
}
.inforChildFor text{
    font-size:32rpx;
}
